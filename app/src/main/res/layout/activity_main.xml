<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnfragment_1"
        android:layout_width="122dp"
        android:layout_height="46dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btnfragment_2"
        app:layout_constraintEnd_toStartOf="@id/btnfragment_3"
        android:text="Fragment 1"
        tools:layout_editor_absoluteX="10dp"
        tools:layout_editor_absoluteY="-7dp" />


    <Button
        android:id="@+id/btnfragment_2"
        android:layout_width="122dp"
        android:layout_height="46dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnfragment_1"
        app:layout_constraintBottom_toTopOf="@id/frameLayout"
        app:layout_constraintEnd_toStartOf="@id/btnfragment_4"
        android:text="Fragment 2"
        tools:layout_editor_absoluteX="10dp"
        tools:layout_editor_absoluteY="49dp" />

    <Button
        android:id="@+id/btnfragment_3"
        android:layout_width="122dp"
        android:layout_height="46dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/btnfragment_1"
        app:layout_constraintBottom_toTopOf="@id/btnfragment_4"
        android:text="Fragment 3"
        tools:layout_editor_absoluteX="230dp"
        tools:layout_editor_absoluteY="-10dp" />

    <Button
        android:id="@+id/btnfragment_4"
        android:layout_width="122dp"
        android:layout_height="46dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnfragment_3"
        app:layout_constraintBottom_toTopOf="@id/frameLayout"
        app:layout_constraintStart_toEndOf="@id/btnfragment_2"
        android:text="Fragment 4"
        tools:layout_editor_absoluteX="231dp"
        tools:layout_editor_absoluteY="49dp" />

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnfragment_2"
        android:layout_height="616dp"
        tools:layout_editor_absoluteX="10dp"
        tools:layout_editor_absoluteY="106dp" />


</androidx.constraintlayout.widget.ConstraintLayout>